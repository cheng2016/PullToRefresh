<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/list_view_refresh"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="@dimen/widget_size_10"
        android:background="#cccccc"
        android:gravity="center"
        android:text="PullRefreshActivity" />

    <TextView
        android:id="@+id/list_view_pull_down_refresh"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="@dimen/widget_size_10"
        android:background="#cccccc"
        android:gravity="center"
        android:text="PullDownRefreshActivity" />

    <TextView
        android:id="@+id/grid_view_refresh"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="@dimen/widget_size_10"
        android:background="#cccccc"
        android:gravity="center"
        android:text="GridActivity" />

    <TextView
        android:id="@+id/scroll_view_refresh"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="@dimen/widget_size_10"
        android:background="#cccccc"
        android:gravity="center"
        android:text="ScrollViewActivity" />
</LinearLayout>